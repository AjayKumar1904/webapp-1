pipeline {
  agent any
  tools {
  maven 'Maven'
  }
  stages {
    stage ('Initialize') {
      steps{
       sh 'echo "PATH = ${PATH}" '
       sh 'echo "M2_HOME = ${M2_HOME}" '
      }
    }
    stage ('Build') {
      steps {
        sh 'mvn clean package'
      }
    }
    stage ('Deploy to tomacat'){
    steps {
       sh 'cp target/*.war /root/apache-tomcat-8.5.54/webapps/webapp.war'
       }
    }
  }
}
